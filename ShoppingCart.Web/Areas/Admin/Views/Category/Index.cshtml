@model ShoppingCart.DataAccess.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Categories:</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-outline-primary" asp-action="CreateUpdate" asp-controller="Category">
                <i class="bi bi-plus-circle"></i>&nbsp; Create
            </a>
        </div>
    </div>
</div>

<table class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model.Categories)
        {
            <tr>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.DisplayOrder
                </td>
                <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="Category" asp-route-id="@category.Id">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>