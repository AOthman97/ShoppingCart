<div class="container p-4">
    <div class="row p-3">
        <h2 class="text-primary">List of Products</h2>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-outline-primary" asp-action="CreateUpdate" asp-controller="Product"><i class="bi bi-plus-circle"></i>&nbsp;Create a new Product!</a>
    </div>
</div>

<table id="productsTable" class="table table-bordered table-striped" style="width: 100%">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Description</th>
            <th>Product Category</th>
            <th>Action</th>
        </tr>
    </thead>
</table>

@section scripts {
    <script src="~/js/Product.js"></script>
}